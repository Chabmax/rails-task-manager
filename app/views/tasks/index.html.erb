  <h1>My Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <input type="checkbox" checked>
        <%= link_to task.title, task_path(task.id)%>
      <% else %>
        <input type="checkbox">
        <%= link_to task.title, task_path(task.id)%>
      <% end %>
      <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
<%= link_to "New task", new_task_path%>



